<div class="card bg-dark text-light shadow p-4 mb-4">
  <h4 class="mb-3 text-primary">Your Subscription</h4>

  <% if account.present? && account.plan.present? %>
    <p><strong>Plan:</strong> <%= account.plan.name %></p>

    <p><strong>Status:</strong>
      <span class="badge <%= account.status == "active" ? "bg-success" : "bg-secondary" %>">
        <%= account.status.capitalize %>
      </span>
    </p>

    <p><strong>Price:</strong> $<%= account.plan.price %> / month</p>
  <% else %>
    <p class="text-muted">You donâ€™t have a subscription yet.</p>
  <% end %>
</div>

