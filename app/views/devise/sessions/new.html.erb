<h2 class="text-light mb-4">Sign In</h2>

<%= form_with(model: resource, url: session_path(resource_name),
      data: { controller: "signin", action: "input->signIn#validateForm submit->signIn#submitForm turbo:submit-end->signIn#clearForm" }) do |f| %>

  <div class="mb-3">
    <%= f.label :email, class: "form-label text-light" %>
    <div class="input-group">
      <span class="input-group-text bg-dark text-light"><i class="bi bi-envelope"></i></span>
      <%= f.email_field :email,
            class: "form-control bg-dark text-light",
            data: { signin_target: "email" },
            placeholder: "Your@email.com" %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label text-light" %>
    <div class="input-group">
      <span class="input-group-text bg-dark text-light"><i class="bi bi-lock"></i></span>
      <%= f.password_field :password,
            class: "form-control bg-dark text-light",
            data: { signin_target: "password" },
            placeholder: "Enter your password" %>
    </div>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :remember_me, class: "form-check-input", id: "rememberMe" %>
    <label for="rememberMe" class="form-check-label text-light">Remember me</label>
  </div>

  <%= f.submit "Sign In", class: "btn btn-primary", data: { signin_target: "submit" } %>
<% end %>

