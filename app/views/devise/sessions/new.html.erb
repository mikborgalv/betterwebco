<h2 class="text-light mb-4">Sign In</h2>

<%= form_with(model: resource, url: session_path(resource_name),
      data: { controller: "form", action: "input->form#validateForm submit->form#submitForm turbo:submit-end->form#clearForm" }) do |f| %>

  <!-- Email -->
  <div class="mb-3">
    <%= f.label :email, class: "form-label text-light" %>
    <div class="input-group">
      <span class="input-group-text bg-dark text-light"><i class="bi bi-envelope"></i></span>
      <%= f.email_field :email,
            class: "form-control bg-dark text-light #{'is-invalid' if resource.errors[:email].any?}",
            data: { form_target: "email" },
            placeholder: "Your@email.com" %>
    </div>
    <% if resource.errors[:email].any? %>
      <div class="invalid-feedback text-light" role="alert">
        <%= resource.errors[:email].join(", ") %>
      </div>
    <% end %>
  </div>

  <!-- Password -->
  <div class="mb-3">
    <%= f.label :password, class: "form-label text-light" %>
    <div class="input-group">
      <span class="input-group-text bg-dark text-light"><i class="bi bi-lock"></i></span>
      <%= f.password_field :password,
            class: "form-control bg-dark text-light #{'is-invalid' if resource.errors[:password].any?}",
            data: { form_target: "password" },
            placeholder: "Enter your password" %>
    </div>
    <% if resource.errors[:password].any? %>
      <div class="invalid-feedback text-light" role="alert">
        <%= resource.errors[:password].join(", ") %>
      </div>
    <% end %>
  </div>

  <!-- Remember Me -->
  <div class="mb-3 form-check">
    <%= f.check_box :remember_me, class: "form-check-input", id: "rememberMe" %>
    <%= f.label :remember_me, "Remember me", class: "form-check-label text-light", for: "rememberMe" %>
  </div>

  <!-- Submit -->
  <%= f.submit "Sign In", class: "btn btn-primary", data: { form_target: "submit" } %>
<% end %>

<p class="text-light mt-3">
  Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "text-decoration-underline text-light" %>
  <br>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-decoration-underline text-light" %>
</p>

