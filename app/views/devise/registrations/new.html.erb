<h2 class="text-light mb-4">Sign Up</h2>

<%= form_with(model: resource, url: registration_path(resource_name),
      data: { controller: "signup", action: "input->signup#validateForm submit->signup#submitForm turbo:submit-end->signup#clearForm" }) do |f| %>
  
  <!-- Error Display -->
  <div class="alert alert-danger d-none" data-signup-target="error"></div>

  <!-- Email -->
  <div class="mb-3">
    <%= f.label :email, class: "form-label text-light" %>
    <div class="input-group">
      <span class="input-group-text bg-dark text-light"><i class="bi bi-envelope"></i></span>
      <%= f.email_field :email,
            class: "form-control bg-dark text-light #{'is-invalid' if resource.errors[:email].any?}",
            data: { signup_target: "email" },
            placeholder: "Your@email.com",
            autocomplete: "email" %>
    </div>
    <% if resource.errors[:email].any? %>
      <div class="invalid-feedback text-light" role="alert">
        <%= resource.errors[:email].join(", ") %>
      </div>
    <% end %>
  </div>

  <!-- Password -->
  <div class="mb-3">
    <%= f.label :password, class: "form-label text-light" %>
    <div class="input-group">
      <span class="input-group-text bg-dark text-light"><i class="bi bi-lock"></i></span>
      <%= f.password_field :password,
            class: "form-control bg-dark text-light #{'is-invalid' if resource.errors[:password].any?}",
            data: { signup_target: "password" },
            placeholder: "Enter your password",
            autocomplete: "new-password" %>
    </div>
    <% if resource.errors[:password].any? %>
      <div class="invalid-feedback text-light" role="alert">
        <%= resource.errors[:password].join(", ") %>
      </div>
    <% end %>
  </div>

  <!-- Password Confirmation -->
  <div class="mb-3">
    <%= f.label :password_confirmation, class: "form-label text-light" %>
    <div class="input-group">
      <span class="input-group-text bg-dark text-light"><i class="bi bi-lock-fill"></i></span>
      <%= f.password_field :password_confirmation,
            class: "form-control bg-dark text-light #{'is-invalid' if resource.errors[:password_confirmation].any?}",
            data: { signup_target: "passwordConfirmation" },
            placeholder: "Confirm password",
            autocomplete: "new-password" %>
    </div>
    <% if resource.errors[:password_confirmation].any? %>
      <div class="invalid-feedback text-light" role="alert">
        <%= resource.errors[:password_confirmation].join(", ") %>
      </div>
    <% end %>
  </div>

  <!-- Submit -->
  <%= f.submit "Sign Up", 
        class: "btn btn-primary", 
        data: { signup_target: "submit" } %>
<% end %>

<p class="text-light mt-3">
  Already have an account? <%= link_to "Sign in", new_session_path(resource_name), class: "text-decoration-underline text-light" %>
</p>