<h2 class="text-light mb-4">Edit Your Account</h2>

<%= form_with(model: resource, url: registration_path(resource_name),
      method: :patch,
      data: { controller: "form", action: "input->form#validateForm submit->form#submitForm turbo:submit-end->form#clearForm" }) do |f| %>

  <!-- Email -->
  <div class="mb-3">
    <%= f.label :email, class: "form-label text-light" %>
    <div class="input-group">
      <span class="input-group-text bg-dark text-light"><i class="bi bi-envelope"></i></span>
      <%= f.email_field :email,
            class: "form-control bg-dark text-light #{'is-invalid' if resource.errors[:email].any?}",
            data: { form_target: "email" },
            placeholder: "Your@email.com" %>
    </div>
    <% if resource.errors[:email].any? %>
      <div class="invalid-feedback text-light" role="alert">
        <%= resource.errors[:email].join(", ") %>
      </div>
    <% end %>
  </div>

  <!-- Password -->
  <div class="mb-3">
    <%= f.label :password, "New Password", class: "form-label text-light" %>
    <div class="input-group">
      <span class="input-group-text bg-dark text-light"><i class="bi bi-lock"></i></span>
      <%= f.password_field :password,
            class: "form-control bg-dark text-light #{'is-invalid' if resource.errors[:password].any?}",
            data: { form_target: "password" },
            placeholder: "Leave blank if unchanged" %>
    </div>
    <% if resource.errors[:password].any? %>
      <div class="invalid-feedback text-light" role="alert">
        <%= resource.errors[:password].join(", ") %>
      </div>
    <% end %>
  </div>

  <!-- Password Confirmation -->
  <div class="mb-3">
    <%= f.label :password_confirmation, class: "form-label text-light" %>
    <div class="input-group">
      <span class="input-group-text bg-dark text-light"><i class="bi bi-lock-fill"></i></span>
      <%= f.password_field :password_confirmation,
            class: "form-control bg-dark text-light #{'is-invalid' if resource.errors[:password_confirmation].any?}",
            placeholder: "Confirm new password" %>
    </div>
    <% if resource.errors[:password_confirmation].any? %>
      <div class="invalid-feedback text-light" role="alert">
        <%= resource.errors[:password_confirmation].join(", ") %>
      </div>
    <% end %>
  </div>

  <!-- Current Password -->
  <div class="mb-3">
    <%= f.label :current_password, "Current Password", class: "form-label text-light" %>
    <div class="input-group">
      <span class="input-group-text bg-dark text-light"><i class="bi bi-key"></i></span>
      <%= f.password_field :current_password,
            class: "form-control bg-dark text-light #{'is-invalid' if resource.errors[:current_password].any?}",
            placeholder: "Enter current password" %>
    </div>
    <% if resource.errors[:current_password].any? %>
      <div class="invalid-feedback text-light" role="alert">
        <%= resource.errors[:current_password].join(", ") %>
      </div>
    <% end %>
  </div>

  <%= f.submit "Update Account", class: "btn btn-primary", data: { form_target: "submit" } %>
<% end %>

<p class="text-light mt-3">
  <%= link_to "Back to Dashboard", root_path, class: "text-decoration-underline text-light" %>
</p>
