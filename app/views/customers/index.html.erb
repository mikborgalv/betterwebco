<!-- Hero Section -->
<div class="hero-section">
  <!-- Preload hero image -->
  <%= tag.link rel: "preload", href: asset_path('web1st.jpg'), as: "image", media: "(min-width: 600px)" %>
  
  <!-- Background image with optimized loading -->
  <picture>
    <!-- WebP version for supported browsers -->
    <source srcset="<%= asset_path('web1st.webp') %>" type="image/webp">
    <!-- Fallback JPEG -->
    <source srcset="<%= asset_path('web1st.jpg') %>" type="image/jpeg">
    <!-- Fallback img element -->
    <img src="<%= asset_path('web1st.jpg') %>" alt="" class="hero-bg" loading="lazy" decoding="async">
  </picture>
  
  <!-- Content container -->
  <div class="hero-content">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center">
          <h1 class="display-4 fw-bold mb-4 animate__animated animate__fadeIn">Welcome to BetterWebco</h1>
          <p class="lead mb-4 animate__animated animate__fadeIn animate__delay-1s">
            Empowering small businesses, entrepreneurs, and individuals to thrive online.
          </p>
          <div class="d-flex justify-content-center gap-3 animate__animated animate__fadeIn animate__delay-2s">
            <%= link_to "Get Started", new_customer_path, class: "btn btn-primary btn-lg" %>
            <%= link_to "Learn More", "#services", class: "btn btn-outline-light btn-lg" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
