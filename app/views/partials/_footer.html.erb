<!-- app/views/partials/_footer.html.erb -->
<footer class="footer bg-dark text-light py-5" aria-label="Footer">
  <div class="container">
    <div class="row">
      <!-- Brand and Social Media Links -->
      <div class="col-md-4 mb-4">
        <%= link_to root_path, class: "d-flex align-items-center text-decoration-none text-light", aria: { label: "Home" } do %>
          <%# = image_tag "betterwebco_logo.png", alt: "BetterWebCo Logo", class: "me-2", width: "30" %>
          <span class="h5 mb-0">BetterWebCo</span>
        <% end %>
        <p class="mt-3">Web solutions for your business.</p>
        <!-- Social Media Icons -->
        <div class="d-flex gap-3">
          <%= link_to "https://instagram.com", target: "_blank", class: "text-light text-decoration-none", aria: { label: "Instagram" } do %>
            <i class="bi bi-instagram fs-5"></i>
          <% end %>
          <%= link_to "https://github.com", target: "_blank", class: "text-light text-decoration-none", aria: { label: "GitHub" } do %>
            <i class="bi bi-github fs-5"></i>
          <% end %>
        </div>
      </div>

      <!-- Services Link -->
      <div class="col-md-4 mb-4">
        <h5 class="mb-3">Your service technolgies</h5>
        <ul class="list-unstyled">
          <li class="mb-2">
            <%= link_to "Database Managment", static_pages_our_services_path, class: "text-light text-decoration-none", aria: { label: "View all service cards" } %>
          </li>
          <li class="mb-2">
            <%= link_to "Web Development", "#", class: "text-light text-decoration-none", aria: { label: "Web Development" } %>
          </li>
          <li class="mb-2">
            <%= link_to "SEO Optimization", "#", class: "text-light text-decoration-none", aria: { label: "SEO Optimization" } %>
          </li>
          <li class="mb-2">
            <%= link_to "Maintenance & Support", "#", class: "text-light text-decoration-none", aria: { label: "Maintenance and Support" } %>
          </li>
        </ul>
      </div>

      <!-- Contact Information -->
      <div class="col-md-4 mb-4">
        <h5 class="mb-3">Contact Us</h5>
        <ul class="list-unstyled">
          <li class="mb-2">
            <%= mail_to "miguelborquez7@gmail.com", class: "text-light text-decoration-none", aria: { label: "Email BetterWebCo" } do %>
              <i class="bi bi-envelope me-2"></i>info@betterwebco.com
            <% end %>
          </li>
          <li class="mb-2">
            <i class="bi bi-geo-alt me-2"></i>Anaheim, CA
          </li>
        </ul>
      </div>
    </div>

    <!-- Copyright Notice -->
    <div class="row mt-4">
      <div class="col-12 text-center">
        <p class="mb-0">&copy; <%= Time.current.year %> BetterWebCo. All rights reserved.</p>
      </div>
    </div>
  </div>
</footer>