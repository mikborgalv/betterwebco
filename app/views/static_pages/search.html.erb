<div class="bg-dark text-light vh-100 d-flex align-items-center"  style="background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('<%= asset_path('web1st.jpg') %>'); background-size: cover; background-position: center;">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto text-center">
        <h1 class="display-4 fw-bold mb-4">Got questions ? </h1>
        <p class="lead mb-4">
         Look up at our most frequent questions from clients.<br> <%= link_to "Submit yours", new_customer_path, class: "small" %>
        </p>
<!-- Search and FAQ Section -->
<div class="row mt-4" data-controller="search">
  <div class="col-12 position-relative">
    <!-- Search Input and Button -->
    <div class="input-group mb-3 position-absolute" style="top: 0; left: 50%; transform: translateX(-50%); z-index: 1000;">
      <input
        type="text"
        class="form-control bg-transparent text-light border-light w-300px"
        placeholder="Search FAQs..."
        aria-label="Search FAQs"
        data-search-target="input"
        data-action="input->search#search focusout->search#clearResults"
      />
      <button class="btn btn-outline-light" type="button" aria-label="Search">
    
       Clear
      </button>
    </div>

    <!-- FAQ Results -->
    <div id="faq-results" class="mt-3 position-relative" data-search-target="results" style="top: 60px; width: 100%; max-width: 800px;">
      <!-- FAQ Results will be displayed here -->
    </div>
  </div>
</div>
      </div>
    </div>
  </div>
</div>